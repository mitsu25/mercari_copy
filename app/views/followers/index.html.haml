.container
  = render partial: "layouts/header"
  .container__inner.clearfix
    - if @user.id == current_user.id
      %ul.container__inner__menu
        %li.container__inner__menu__item
          = link_to "マイページメニュー", user_path(current_user)
        %li.container__inner__menu__item
          = link_to "出品商品一覧", root_path
        %li.container__inner__menu__item
          = link_to "購入商品一覧", buy_list_users_path
        %li.container__inner__menu__item.container__inner__menu__item--grey
          = link_to "フォロー出品者の商品一覧", followers_path
        %li.container__inner__menu__item
          = link_to "ユーザー情報変更", edit_user_registration_path
    .container__inner__list_box.container__right_inner
      .container__right_inner__item_box
        .container__right_inner__item_box__title.clearfix
          %h2 フォローしているユーザの商品
        .container__right_inner__item_box__content.clearfix
          = render partial: "layouts/small_item_list"
  = render partial: "layouts/footer"
