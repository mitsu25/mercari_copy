.container
  = render partial: "layouts/header_plane"
  .main
    .form
      .form__inner
        %p.form__title 購入を確定しますか？
      .form__inner
        .form__inner__container
          .item_info
            = image_tag "logos/copicari_logo_small", class: "item_info__item_image"
            %p.item_info__item_name copicari!!!
            .item_info__price_info
              %p.item_info__price_info__item_price ¥3,000
              %p.item_info__price_info__delivery_fee 送料込み
            .item_info__total_info.clearfix
              %p.item_info__total_info__title 支払い金額
              %p.item_info__total_info__price ¥3,000
            .item_info__buy_btn
              %p 購入する
      .form__inner
        .form__inner__container
          %p.buy_info__title 配送先
          .address_info
            %ul.address_info__list.buy_info__list
              %li.address_info__zip_code 〒000-0000
              %li.address_info__address  東京都渋谷区〇〇〇
              %li.address_info__name     小光 太郎
      .form__inner
        .form__inner__container
          .payment_info
            %p.buy_info__title 支払い方法
            %ul.payment_info__list.buy_info__list
              %li.payment_info__number       0000-0000-0000
              %li.address_info__expire_date  〇〇/〇〇
              %li.address_info__company      VISA
  = render partial: "layouts/registration_footer"
