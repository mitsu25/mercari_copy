.container
  %header
    = render partial: "layouts/registration_header"
  .main
    .form
      .form__title 会員情報入力
      .form__body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form__field
            = f.label "ニックネーム", class: "form__field__label"
            %i.form__field__must_info 必須
            %br
            = f.text_field :name, placeholder: "例）コピカリ太郎", class: "form__field__form"
          .form__field
            = f.label "メールアドレス", class: "form__field__label"
            %i.form__field__must_info 必須
            %br
            = f.email_field :email, autofocus: true, placeholder: "PC・携帯どちらでも可", class: "form__field__form"
          .form__field
            = f.label "パスワード", class: "form__field__label"
            %i.form__field__must_info 必須
            %br
            = f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} 文字以上", class: "form__field__form"
          .form__field
            = f.label "パスワード（確認）", class: "form__field__label"
            %i.form__field__must_info 必須
            %br
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length} 文字以上", class: "form__field__form"
          .form__field
            = f.submit "次へ進む", class: "form__field__button"
  = render partial: "layouts/registration_footer"
